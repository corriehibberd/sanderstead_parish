<%= form_for @sermon, :url => @path do |f| %>
	<div class="field">
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :body %>
		<%= f.text_area :content, :class => "ckeditor" %>
	</div>
	<div class="field">
		<%= f.label :date %>
		<%= f.text_field :date, :class => 'datepicker' %>
	</div>
	<div class="field">
		<%= f.label :church_id %>
		<%= f.select :church_id, options_from_collection_for_select(Church.all, :slug, :name, @sermon.church_id) %>
	</div>
	<div class="button confirm_button">
			<%= f.submit :class => 'btn btn-success' %>
	</div>
<% end %>