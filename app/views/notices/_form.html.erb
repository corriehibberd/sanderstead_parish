<%= tinymce %>
<%= form_for @notice, :url => @path do |f| %>
	<div class="field">
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :body %><br />
		<%= f.text_area :content, :class => "tinymce", :rows => 40, :cols => 120 %>
	</div>
	<div class="field">
		<%= f.label :date %><br />
		<%= f.text_field :date, :class => 'datepicker' %>
	</div>
	<div class="field">
		<%= f.label :church_id %>
		<%= f.select :church_id, church_options_for_select(@notice) %>
	</div>
	<div class="button confirm_button">
			<%= f.submit :class => 'btn btn-success' %>
	</div>
<% end %>