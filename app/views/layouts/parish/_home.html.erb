<div id="parish_home">
	<div id="slideshow">
		<%= region(SLIDESHOW) do |region| %>
			<%= render_slideshow(region) %>
		<% end %>
	</div>
	<div id="slideshow_controls">
		<a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
	  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
	</div>
	<div id="main_content">
		<div class="container">
			<div id="left">
				<div id="intro">
					<%= region('intro') %>
				</div>
				<div id="churches">
					
					<div class="church">
						<%= region('all-saints') do |region| %>
							<div class="church_image">
								<%= region.images %>
							</div>
							<div class="church_text">
								<%= region.text %>
							</div>
						<% end %>
					</div>

					<div class="church">
						<%= region('st-marys') do |region| %>
							<div class="church_image">
								<%= region.images %>
							</div>
							<div class="church_text">
								<%= region.text %>
							</div>
						<% end %>
					</div>
					
					<div class="church">
						<%= region('st-edmunds') do |region| %>
							<div class="church_image">
								<%= region.images %>
							</div>
							<div class="church_text">
								<%= region.text %>
							</div>
						<% end %>
					</div>
					
					<div class="church">
						<%= region('st-antonys') do |region| %>
							<div class="church_image">
								<%= region.images %>
							</div>
							<div class="church_text">
								<%= region.text %>
							</div>
						<% end %>
					</div>
					
				</div>
			</div>
			<div id="right">
				<%= region(EVENTS) %>
			</div>
			<div class="spacer"></div>
			<div id="bottom" class="clearfix">
				<h1>The Sanderstead Parish Community</h1>
				
				<div class="feature">
					<%= region('feature1') do |region| %>
