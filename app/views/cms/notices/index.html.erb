<div class="top_right_controls">
	<%= link_to "New Notice", main_app.new_cms_notice_path(@group), :class => 'btn btn-info' %>
</div>

<div class="page_header">
	<h1>Notices</h1>
</div>

<section class="page_content">
	<% @notices.each do |notice| %>
		<div class="index_item page_index_item">
			<div class="controls">
				<%= link_to 'Delete', main_app.cms_notice_path(@group, notice), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-danger' %>				
				<%= link_to 'Edit', main_app.edit_cms_notice_path(@group, notice), :class => 'btn btn-warning' %>							
				<%= link_to 'View', main_app.notice_path(@group, notice), :class => 'btn' %>
			</div>
			<%= link_to notice.title, main_app.edit_cms_notice_path(@group, notice) %>			
			<div>
				<%= l notice.date, :format => :long %>
			</div>
		</div>
	<% end %>
</section>