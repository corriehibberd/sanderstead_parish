<div id="myCarousel" class="carousel slide slideshow_widget widget">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <% widget.remaining_images.each.with_index(1) do |image, index| %>
    	<li data-target="#myCarousel" data-slide-to="<%= index %>"></li>
    <% end %>
  </ol>
  <!-- Carousel items -->
  <div class="carousel-inner">
		<div class="item active">
      <img src="<%= widget.first_image.file.url %>">
    </div>
    <% widget.remaining_images.each do |image| %>
	  	<div class="item">
	      <div data-src="<%= image.file.url %>" class="load-lazy"></div>
	    </div>
	  <% end %>
  </div>
</div>